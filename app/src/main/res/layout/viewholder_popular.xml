<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/popular_background"
    android:elevation="3dp">

    <TextView
        android:id="@+id/categoryListTitle_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:text="Creme Brulee"
        android:textColor="#373b54"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/categoryListImage_id"
        android:layout_width="147dp"
        android:layout_height="171dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_popular_cremebrulee" />

    <TextView
        android:id="@+id/categoryListTitleCookingtime_id"
        android:layout_width="97dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="90 Minuten"
        android:textColor="#373b54"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/categoryListImage_id"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintStart_toStartOf="@+id/categoryListImage_id"
        app:layout_constraintTop_toBottomOf="@+id/categoryListImage_id" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="32dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toStartOf="@+id/categoryListTitleCookingtime_id"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryListImage_id"
        app:srcCompat="@drawable/s_popular_cooking_time" />

    <TextView
        android:id="@+id/categoryListDifficulty_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Einfach"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/categoryListImage_id"
        app:layout_constraintStart_toStartOf="@+id/categoryListImage_id"
        app:layout_constraintTop_toBottomOf="@+id/categoryListTitleCookingtime_id" />
</androidx.constraintlayout.widget.ConstraintLayout>
